@using CoffeeMeetingPlanner.Application.Model

<MudCard Outlined="true">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Week @Overview.WeekNumber</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        @foreach (var meeting in Overview.Meetings)
        {
            <MudText Typo="Typo.body2">@(meeting.FirstAttendee.Name) - @(meeting.SecondAttendee.Name)</MudText>
        }
    </MudCardContent>
</MudCard>

@code {
    [Parameter, EditorRequired]
    public CoffeeMeetingPlanner.Application.Model.WeekOverview Overview { get; set; } = null!;
}